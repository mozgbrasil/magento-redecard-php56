                    <files>
                        <default>Mozg_Redecard.csv</default>
                    </files>
                </Mozg_Redecard>
            </modules>
        </translate>
        <events>
            <sales_order_payment_cancel>
                <observers>
                    <mozg_redecard_sales_order_payment_cancel>
                        <class>mozg_redecard/observer</class>
                        <method>salesOrderPaymentCancel</method>
                    </mozg_redecard_sales_order_payment_cancel>
                </observers>
            </sales_order_payment_cancel>
            <controller_action_postdispatch_adminhtml_sales_order_create_save>
                <observers>
                    <mozg_redecard_controller_action_postdispatch_adminhtml_sales_order_create_save>
                        <class>mozg_redecard/observer</class>
                        <method>adminSalesOrderCreateSave</method>
                    </mozg_redecard_controller_action_postdispatch_adminhtml_sales_order_create_save>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_create_save>
        </events>
    </adminhtml>
    <default>
        <payment>
            <mozg_redecard_abstract>
                <!-- BASE -->
                <active>0</active>
                <sort_order>4000</sort_order>
                <debug>1</debug>
                <!-- DEFAULT -->
                <demoMode>Y</demoMode>
                <capture_mode>auto</capture_mode>
                <order_status>pending</order_status>
                <payment_pre_authorized>pending</payment_pre_authorized>
                <payment_authorized>processing</payment_authorized>
                <payment_cancelled>holded</payment_cancelled>
                <payment_authorized_virtual>complete</payment_authorized_virtual>
                <refund_authorized>closed</refund_authorized>
                <refund_partial_authorized>processing</refund_partial_authorized>
                <pending_status>pending_payment</pending_status>
                <create_pending_invoice>0</create_pending_invoice>
                <capture_on_shipment>0</capture_on_shipment>
                <uncancelorder>1</uncancelorder>
                <autorefundoncancel>1</autorefundoncancel>
                <send_invoice_update_mail>1</send_invoice_update_mail>
                <send_update_mail>1</send_update_mail>
                <ignore_refund_notification>0</ignore_refund_notification>
                <!--<recurringtypes>ONECLICK</recurringtypes>-->
                <payment_cancelled_redirect>checkout/cart</payment_cancelled_redirect>
                <title_renderer>title_image</title_renderer>
                <shopperlocale></shopperlocale>
                <countryCode></countryCode>
                <split_payments_refund_strategy>1</split_payments_refund_strategy>
            </mozg_redecard_abstract>
            <mozg_redecard_komerci_cc translate="title" module="mozg_redecard">
                <active>0</active>
                <sort_order>4010</sort_order>
                <title>Cartão de Crédito Redecard Komerci Webservice (powered by MOZG)</title>
                <model>mozg_redecard/method_komerci_cc</model>
                <group>mozg_payment</group>                
                <debug>1</debug>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
                <cctypes>VI,MC,DC,hipercard,hiper</cctypes>
                <visible_type>both</visible_type>
                <authenticate>0</authenticate>
                <enable_moto>0</enable_moto>
                <enable_installments>1</enable_installments>
                <installments>a:6:{i:0;a:4:{i:0;s:3:"BRL";i:1;s:3:"100";i:2;s:1:"1";i:3;s:1:"0";}i:1;a:4:{i:0;s:3:"BRL";i:1;s:3:"200";i:2;s:1:"2";i:3;s:1:"0";}i:2;a:4:{i:0;s:3:"BRL";i:1;s:3:"600";i:2;s:1:"3";i:3;s:1:"0";}i:3;a:4:{i:0;s:3:"BRL";i:1;s:3:"800";i:2;s:1:"4";i:3;s:1:"0";}i:4;a:4:{i:0;s:3:"BRL";i:1;s:5:"10000";i:2;s:1:"5";i:3;s:1:"0";}i:5;a:4:{i:0;s:3:"BRL";i:1;s:6:"100000";i:2;s:1:"6";i:3;s:1:"0";}}</installments>
            </mozg_redecard_komerci_cc>

        </payment>
        <mozg_redecard>
