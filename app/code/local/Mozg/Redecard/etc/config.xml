    </global>
    <frontend>
        <secure_url>
            <mozg_process>/mozg_redecard/process</mozg_process>
        </secure_url>
        <routers>
            <mozg_redecard>
                <use>standard</use>
                <args>
                    <module>Mozg_Redecard</module>
                    <frontName>mozg_redecard</frontName>
                </args>
            </mozg_redecard>
        </routers>
        <translate>
            <modules>
                <Mozg_Redecard>
                    <files>
                        <default>Mozg_Redecard.csv</default>
                    </files>
                </Mozg_Redecard>
            </modules>
        </translate>
        <layout>
            <updates>
                <mozg_redecard>
                    <file>mozg_redecard.xml</file>
                </mozg_redecard>
            </updates>
        </layout>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <mozg_redecard_checkout_onepage_controller_success_action>
                        <class>mozg_redecard/observer</class>
                        <method>checkoutSuccess</method>
                    </mozg_redecard_checkout_onepage_controller_success_action>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mozg_Redecard before="Mage_Adminhtml">Mozg_Redecard_Adminhtml</Mozg_Redecard>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <mozg_redecard>
                    <file>mozg_redecard.xml</file>
                </mozg_redecard>
            </updates>
        </layout>
        <translate>
            <modules>
